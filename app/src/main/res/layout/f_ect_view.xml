<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="BwNumberPicker"
            />

        <foundation.bluewhale.splashviews.widget.BwNumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View style="@style/white_line"
              android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:text="BWTextButton (enable/disable)"
                />

            <Switch
                android:id="@+id/switch_for_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="" />
        </RelativeLayout>

        <foundation.bluewhale.splashviews.widget.BWTextButton
            android:id="@+id/button"
            style="@style/BWTextButton_blue_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/button_next"
            android:textSize="18sp"
            app:fontFamily="@font/notosans_cjkkr_medium"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View style="@style/white_line"
              android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="IconImageView"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                app:imageColor="@android:color/holo_red_light"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search_wh"
                app:imageColor="@android:color/holo_green_dark"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="@android:color/holo_blue_dark"/>
            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="@color/pwUnderlineColor"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#00ff00"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#ff0000"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#0000ff"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#ff00ff"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#00ff00"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#fff000"/>

            <foundation.bluewhale.splashviews.widget.IconImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_wh"
                android:layout_marginLeft="10dp"
                app:imageColor="#3BB64B"/>
        </LinearLayout>

        <View style="@style/white_line"
              android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="InfoHorizontalView"
            />

        <foundation.bluewhale.splashviews.widget.InfoHorizontalView
            android:id="@+id/InfoHorizontalView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Item"
            app:message="Water"
            app:titleSize="17sp"
            app:messageSize="17sp"
            />
        <foundation.bluewhale.splashviews.widget.InfoHorizontalView
            android:id="@+id/InfoHorizontalView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            app:title="amount"
            app:titleColor="#00ffff"
            app:titleSize="17sp"
            app:message="1,000"
            app:messageColor="#ffff00"
            app:messageSize="17sp"
            />

        <View style="@style/white_line"
              android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="InfoVerticalView"
            />
        <foundation.bluewhale.splashviews.widget.InfoVerticalView
            android:id="@+id/InfoVerticalView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            app:title="Guide to app architecture"
            app:titleColor="#ff0000"
            app:message="This guide is for developers who are past the basics of building an app and now want to know the best practices and recommended architecture for building robust, production-quality apps.This page assumes you are familiar with the Android Framework. If you are new to Android app development, check out our Developer guides, which cover prerequisite topics for this guide."
            app:messageColor="#FFC107"
             />

        <View style="@style/white_line"
              android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="LinearToggleLayout"
            />
        <foundation.bluewhale.splashviews.widget.LinearToggleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toggleText="Tab to expand">
            <foundation.bluewhale.splashviews.widget.InfoVerticalView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Mobile app user experiences"
                app:titleColor="#B8FF69"
                app:message="In the majority of cases, desktop apps have a single entry point from a desktop or program launcher, then run as a single, monolithic process. Android apps, on the other hand, have a much more complex structure. A typical Android app contains multiple app components, including activities, fragments, services, content providers, and broadcast receivers."
                app:messageColor="#ffffff"
                />
        </foundation.bluewhale.splashviews.widget.LinearToggleLayout>
    </LinearLayout>
</ScrollView>