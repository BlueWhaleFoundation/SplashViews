<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="BWEditText"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:underlineType="1"
            app:underlineColor="@color/colorYellow"
            app:showClearButton="true"
            app:hintText="Please input email"
            app:hintTextSize="16sp"
            app:inputTextSize="16sp"
            app:inputType="email"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:leftIconDrawable="@drawable/search_wh"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:underlineType="1"
            app:underlineColor="@color/colorYellow"
            app:clearButtonColor="@color/colorBlueGreen"
            app:showClearButton="true"
            app:hintText="Please input email"
            app:hintTextSize="16sp"
            app:inputTextSize="16sp"
            app:inputType="email"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:inputType="phone"
            app:hintTextSize="16sp"
            app:inputTextSize="16sp"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:inputType="point"
            app:hintText=""
            app:maxLength="10"
            app:hintTextSize="16sp"
            app:inputTextSize="16sp"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:id="@+id/bwet_chargeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingSide"
            android:layout_marginTop="@dimen/paddingTop"
            android:layout_marginRight="@dimen/paddingSide"
            android:layout_marginBottom="20dp"
            app:hintText="충전하실 금액을 입력하세요"
            app:hintTextSize="16sp"
            app:inputTextSize="20sp"
            app:inputType="point"
            app:showClearButton="true"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:id="@+id/bwet_chargeAmount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingSide"
            android:layout_marginTop="@dimen/paddingTop"
            android:layout_marginRight="@dimen/paddingSide"
            android:layout_marginBottom="20dp"
            app:hintTextSize="16sp"
            app:inputTextSize="20sp"
            app:inputType="point"
            app:showClearButton="true"/>

        <foundation.bluewhale.splashviews.widget.BWEditText
            android:id="@+id/bwet_chargeAmount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingSide"
            android:layout_marginTop="@dimen/paddingTop"
            android:layout_marginRight="@dimen/paddingSide"
            android:layout_marginBottom="20dp"
            app:hintText=""
            app:hintTextSize="16sp"
            app:inputTextSize="20sp"
            app:inputType="point"
            app:showClearButton="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="충전하실 금액을 입력하세요"/>

        <foundation.bluewhale.splashviews.widget.BWTextButton
            android:id="@+id/next"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next"/>

    </LinearLayout>
</ScrollView>