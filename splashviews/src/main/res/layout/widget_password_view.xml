<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/background_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/input_password"
            tools:textColor="#ffffff"
            android:textSize="16sp"
            app:fontFamily="@font/notosans_cjkkr_regular" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_pwd_1"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_line_1"
                app:layout_constraintLeft_toLeftOf="@+id/v_line_1"
                app:layout_constraintRight_toRightOf="@+id/v_line_1"
                />

            <View
                android:id="@+id/v_pwd_2"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_line_2"
                app:layout_constraintLeft_toLeftOf="@+id/v_line_2"
                app:layout_constraintRight_toRightOf="@+id/v_line_2" />

            <View
                android:id="@+id/v_pwd_3"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_line_3"
                app:layout_constraintLeft_toLeftOf="@+id/v_line_3"
                app:layout_constraintRight_toRightOf="@+id/v_line_3" />

            <View
                android:id="@+id/v_pwd_4"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_line_4"
                app:layout_constraintLeft_toLeftOf="@+id/v_line_4"
                app:layout_constraintRight_toRightOf="@+id/v_line_4" />

            <View
                android:id="@+id/v_pwd_5"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_line_5"
                app:layout_constraintLeft_toLeftOf="@+id/v_line_5"
                app:layout_constraintRight_toRightOf="@+id/v_line_5" />

            <View
                android:id="@+id/v_pwd_6"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/v_line_6"
                app:layout_constraintLeft_toLeftOf="@+id/v_line_6"
                app:layout_constraintRight_toRightOf="@+id/v_line_6" />

            <View
                android:id="@+id/v_line_1"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <View
                android:id="@+id/v_line_2"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit_line"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_line_1"
                />


            <View
                android:id="@+id/v_line_3"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit_line"
                android:layout_marginLeft="10dp"
                android:theme="@style/PasswordEditTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_line_2" />


            <View
                android:id="@+id/v_line_4"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit_line"
                android:layout_marginLeft="10dp"
                android:theme="@style/PasswordEditTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_line_3" />

            <View
                android:id="@+id/v_line_5"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit_line"
                android:layout_marginLeft="10dp"
                android:theme="@style/PasswordEditTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_line_4" />


            <View
                android:id="@+id/v_line_6"
                tools:background="@color/colorWhite"
                style="@style/PasswordEdit_line"
                android:layout_marginLeft="10dp"
                android:theme="@style/PasswordEditTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/v_line_5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_pwd"
            android:layout_alignLeft="@+id/v_pwd"
            android:includeFontPadding="false"
            android:paddingTop="5dp"
            android:textColor="@color/colorYellow"
            android:textSize="15dp"
            app:fontFamily="@font/notosans_cjkkr_regular"
            tools:text="@string/password_not_matched" />

        <TextView
            android:id="@+id/button_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_error"
            android:layout_alignLeft="@+id/v_pwd"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_textline_white"
            android:includeFontPadding="false"
            android:paddingTop="20dp"
            android:text="@string/login_forgot"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:fontFamily="@font/notosans_cjkkr_regular" />
        <View
            android:id="@+id/v_line_forgot"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/button_forgot"
            android:layout_alignLeft="@+id/button_forgot"
            android:layout_alignRight="@+id/button_forgot"
            tools:background="@color/colorWhite"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:id="@+id/v_keypad_box"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/keypad_1"
                style="@style/KeyPad"
                android:text="1" />

            <TextView
                android:id="@+id/keypad_2"
                style="@style/KeyPad"
                android:text="2" />

            <TextView
                android:id="@+id/keypad_3"
                style="@style/KeyPad"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/keypad_4"
                style="@style/KeyPad"
                android:text="4" />

            <TextView
                android:id="@+id/keypad_5"
                style="@style/KeyPad"
                android:text="5" />

            <TextView
                android:id="@+id/keypad_6"
                style="@style/KeyPad"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/keypad_7"
                style="@style/KeyPad"
                android:text="7" />

            <TextView
                android:id="@+id/keypad_8"
                style="@style/KeyPad"
                android:text="8" />

            <TextView
                android:id="@+id/keypad_9"
                style="@style/KeyPad"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/keypad_delete_all"
                style="@style/KeyPad"
                android:text="@string/keypad_delete"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/keypad_0"
                style="@style/KeyPad"
                android:text="0" />

            <RelativeLayout
                android:id="@+id/keypad_delete_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground">

                <foundation.bluewhale.splashviews.widget.IconImageView
                    android:id="@+id/iv_delete_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back_btn" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>